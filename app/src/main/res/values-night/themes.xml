<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach_pastel2</item>
        <item name="colorPrimaryVariant">@color/peach_pastel2</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?secondaryColor</item>
        <item name="colorSecondaryVariant">?secondaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="primaryTextColor">@color/white</item>
        <item name="primaryColor">@color/black</item>
        <item name="secondaryColor">@color/pixel_blue4</item>
    </style>
</resources>