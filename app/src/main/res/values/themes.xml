<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentDatabase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach_pastel2</item>
        <item name="colorPrimaryVariant">@color/peach_pastel2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_pastel2</item>
        <item name="colorSecondaryVariant">@color/teal_pastel2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTitleBackgroundStyle">@style/themeTitleBackground</item>
        <item name="android:windowTitleSize">65dip</item>
        <!-- Customize your theme here. -->
        <item name="primaryTextColor">@color/black</item>
        <item name="primaryColor">@color/peach_pastel2</item>
        <item name="secondaryColor">@color/teal_pastel2</item>
    </style>
    <style name="themeTitleBackground">
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>