<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudentBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?primaryColor</item>
        <item name="colorPrimaryVariant">?primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?secondaryColor</item>
        <item name="colorSecondaryVariant">?secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTitleBackgroundStyle">@style/themeTitleBackground</item>
        <item name="android:windowTitleSize">65dip</item>
        <!-- Customize your theme here. -->
        <item name="primaryTextColor">@color/black</item>
        <item name="primaryColor">@color/peach_pastel3</item>
        <item name="secondaryColor">@color/peach_pastel3</item>
    </style>
    <style name="themeTitleBackground">
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>